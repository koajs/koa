# Support ES2016 features
parser: babel-eslint

extends: standard

rules:
  eqeqeq: 0
  no-var: 2
  semi: [2, always]
  space-before-function-paren: [2, never]
  yoda: 0
  arrow-parens: [2, "as-needed"]
  arrow-spacing: 2
  dot-location: [2, "property"]
  max-len: [2, 80, 4, {"ignoreComments": true, "ignoreUrls": true}]
